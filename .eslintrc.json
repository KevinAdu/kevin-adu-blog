{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "react/state-in-constructor": [0],
        "react/jsx-fragments": [1, "element"],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "jsx-a11y/label-has-associated-control": [2, {
            "controlComponents": [
              "Field"
            ],
            "depth": 3
          }
        ],
        "react/destructuring-assignment": [2,
          "always",
          {
            "ignoreClassFields": true
          }
        ]
    }
}